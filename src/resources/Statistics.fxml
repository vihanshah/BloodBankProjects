<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.StatisticsController" style="-fx-background-color: linear-gradient(to bottom, #9b59b6, #8e44ad, #9b59b6);">
   <top>
      <VBox alignment="CENTER" prefHeight="120.0" style="-fx-background-color: rgba(0, 0, 0, 0.3);" BorderPane.alignment="CENTER">
         <children>
            <Label text="BLOOD BANK STATISTICS" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="32.0" />
               </font>
               <effect>
                  <javafx.scene.effect.DropShadow />
               </effect>
            </Label>
            <Label text="Data insights and analytics" textFill="#ecf0f1">
               <font>
                  <Font size="18.0" />
               </font>
               <effect>
                  <javafx.scene.effect.DropShadow />
               </effect>
            </Label>
         </children>
      </VBox>
   </top>
   <center>
      <VBox alignment="CENTER" spacing="30.0" style="-fx-background-color: rgba(255, 255, 255, 0.9); -fx-background-radius: 20; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 15, 0, 0, 0);" BorderPane.alignment="CENTER">
         <children>
            <ScrollPane fitToWidth="true" prefHeight="600.0">
               <content>
                  <VBox alignment="CENTER" spacing="40.0" style="-fx-padding: 30;">
                     <children>
                        <Label fx:id="totalDonorsLabel" text="Total Donors: 0" textFill="#8e44ad">
                           <font>
                              <Font name="System Bold" size="24.0" />
                           </font>
                        </Label>
                        <PieChart fx:id="bloodGroupChart" prefHeight="500.0" prefWidth="750.0" style="-fx-background-color: white; -fx-border-color: #9b59b6; -fx-border-width: 2; -fx-border-radius: 5; -fx-background-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.1), 5, 0, 0, 0);" title="Blood Group Distribution">
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                        </PieChart>
                     </children>
                  </VBox>
               </content>
            </ScrollPane>
         </children>
         <padding>
            <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
         </padding>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER_RIGHT" prefHeight="100.0" spacing="30.0" style="-fx-background-color: rgba(0, 0, 0, 0.2);" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBackButton" prefHeight="55.0" prefWidth="250.0" style="-fx-background-color: linear-gradient(to bottom, #34495e, #2c3e50); -fx-background-radius: 30; -fx-border-radius: 30; -fx-border-color: #9b59b6; -fx-border-width: 3; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 15, 0, 0, 0);" text="Back to Main Menu" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="17.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets right="50.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>