<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.ScrollPane?>

<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.SearchController" style="-fx-background-color: radial-gradient(center 50% 50%, radius 100%, #3498db, #2c3e50);">
   <top>
      <VBox alignment="CENTER" prefHeight="150.0" style="-fx-background-color: rgba(0, 0, 0, 0.5); -fx-background-radius: 0 0 40 40;" BorderPane.alignment="CENTER">
         <children>
            <Label text="SEARCH DONORS" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="36.0" />
               </font>
               <effect>
                  <javafx.scene.effect.DropShadow blurType="GAUSSIAN" height="25.0" radius="12.0" width="25.0" />
               </effect>
            </Label>
            <Label text="Find the right donor for every need" textFill="#ecf0f1">
               <font>
                  <Font size="20.0" />
               </font>
               <effect>
                  <javafx.scene.effect.DropShadow blurType="GAUSSIAN" height="15.0" radius="7.0" width="15.0" />
               </effect>
            </Label>
         </children>
      </VBox>
   </top>
   <center>
      <VBox fx:id="searchContainer" alignment="CENTER" spacing="40.0" style="-fx-background-color: rgba(255, 255, 255, 0.95); -fx-background-radius: 40; -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.4), 25, 0, 0, 0); -fx-border-color: #3498db; -fx-border-width: 3; -fx-border-radius: 40;" BorderPane.alignment="CENTER">
         <children>
            <GridPane hgap="30.0" vgap="30.0">
              <columnConstraints>
                <ColumnConstraints halignment="RIGHT" minWidth="160.0" />
                <ColumnConstraints minWidth="350.0" />
                  <ColumnConstraints minWidth="160.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="65.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="65.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="Search By:" textFill="#2c3e50">
                     <font>
                        <Font name="System Bold" size="19.0" />
                     </font>
                  </Label>
                  <Label text="Search Term:" textFill="#2c3e50" GridPane.rowIndex="1">
                     <font>
                        <Font name="System Bold" size="19.0" />
                     </font>
                  </Label>
                  <ComboBox fx:id="searchTypeComboBox" prefHeight="55.0" prefWidth="250.0" style="-fx-background-color: white; -fx-border-color: #3498db; -fx-border-width: 3; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 10, 0, 0, 0);" GridPane.columnIndex="1" />
                  <TextField fx:id="searchField" prefHeight="55.0" prefWidth="300.0" promptText="Enter search term" style="-fx-background-color: white; -fx-border-color: #3498db; -fx-border-width: 3; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 10, 0, 0, 0);" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Button fx:id="searchButton" mnemonicParsing="false" onAction="#handleSearchButton" prefHeight="55.0" prefWidth="160.0" style="-fx-background-color: linear-gradient(to bottom, #3498db, #2980b9); -fx-background-radius: 30; -fx-border-radius: 30; -fx-border-color: #1abc9c; -fx-border-width: 3; -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.4), 15, 0, 0, 0);" text="Search" textFill="WHITE" GridPane.columnIndex="2" GridPane.rowIndex="1">
                     <font>
                        <Font name="System Bold" size="17.0" />
                     </font>
                  </Button>
               </children>
            </GridPane>
            <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="420.0">
               <content>
                  <TableView fx:id="donorTable" prefHeight="420.0" style="-fx-background-color: white; -fx-border-color: #3498db; -fx-border-width: 3; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 10, 0, 0, 0);">
                    <columns>
                      <TableColumn fx:id="idColumn" prefWidth="85.0" text="ID" />
                      <TableColumn fx:id="nameColumn" prefWidth="170.0" text="Name" />
                        <TableColumn fx:id="bloodGroupColumn" prefWidth="120.0" text="Blood Group" />
                        <TableColumn fx:id="cityColumn" prefWidth="140.0" text="City" />
                        <TableColumn fx:id="contactColumn" prefWidth="140.0" text="Contact" />
                        <TableColumn fx:id="availabilityColumn" prefWidth="120.0" text="Available" />
                        <TableColumn fx:id="lastDonationColumn" prefWidth="150.0" text="Last Donation" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </content>
            </ScrollPane>
            <HBox alignment="CENTER" spacing="40.0">
               <children>
                  <Button fx:id="updateButton" mnemonicParsing="false" onAction="#handleUpdateButton" prefHeight="55.0" prefWidth="220.0" style="-fx-background-color: linear-gradient(to bottom, #f39c12, #e67e22); -fx-background-radius: 30; -fx-border-radius: 30; -fx-border-color: #1abc9c; -fx-border-width: 3; -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.4), 15, 0, 0, 0);" text="Update Selected" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="17.0" />
                     </font>
                  </Button>
                  <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#handleDeleteButton" prefHeight="55.0" prefWidth="220.0" style="-fx-background-color: linear-gradient(to bottom, #e74c3c, #c0392b); -fx-background-radius: 30; -fx-border-radius: 30; -fx-border-color: #1abc9c; -fx-border-width: 3; -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.4), 15, 0, 0, 0);" text="Delete Selected" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="17.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="60.0" left="60.0" right="60.0" top="60.0" />
         </padding>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER_RIGHT" prefHeight="100.0" spacing="40.0" style="-fx-background-color: rgba(0, 0, 0, 0.3); -fx-background-radius: 40 40 0 0;" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBackButton" prefHeight="55.0" prefWidth="250.0" style="-fx-background-color: linear-gradient(to bottom, #34495e, #2c3e50); -fx-background-radius: 30; -fx-border-radius: 30; -fx-border-color: #1abc9c; -fx-border-width: 3; -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.4), 15, 0, 0, 0);" text="Back to Main Menu" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="17.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets right="60.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>