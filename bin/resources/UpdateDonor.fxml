<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.UpdateController" style="-fx-background-color: linear-gradient(to bottom, #3498db, #2c3e50);">
   <top>
      <VBox alignment="CENTER" prefHeight="120.0" style="-fx-background-color: rgba(0, 0, 0, 0.3);" BorderPane.alignment="CENTER">
         <children>
            <Label text="UPDATE DONOR INFORMATION" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="28.0" />
               </font>
               <effect>
                  <javafx.scene.effect.DropShadow />
               </effect>
            </Label>
         </children>
      </VBox>
   </top>
   <center>
      <VBox alignment="CENTER" spacing="30.0" style="-fx-background-color: rgba(255, 255, 255, 0.9); -fx-background-radius: 20; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 15, 0, 0, 0);" BorderPane.alignment="CENTER">
         <children>
            <GridPane hgap="25.0" vgap="25.0">
              <columnConstraints>
                <ColumnConstraints halignment="RIGHT" minWidth="140.0" />
                <ColumnConstraints minWidth="320.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="55.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="55.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="55.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="55.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="55.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="55.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="55.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="55.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="55.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="Donor ID:" textFill="#2c3e50">
                     <font>
                        <Font name="System Bold" size="17.0" />
                     </font>
                  </Label>
                  <Label text="Full Name:" textFill="#2c3e50" GridPane.rowIndex="1">
                     <font>
                        <Font name="System Bold" size="17.0" />
                     </font>
                  </Label>
                  <Label text="Blood Group:" textFill="#2c3e50" GridPane.rowIndex="2">
                     <font>
                        <Font name="System Bold" size="17.0" />
                     </font>
                  </Label>
                  <Label text="City:" textFill="#2c3e50" GridPane.rowIndex="3">
                     <font>
                        <Font name="System Bold" size="17.0" />
                     </font>
                  </Label>
                  <Label text="Contact:" textFill="#2c3e50" GridPane.rowIndex="4">
                     <font>
                        <Font name="System Bold" size="17.0" />
                     </font>
                  </Label>
                  <Label text="Availability:" textFill="#2c3e50" GridPane.rowIndex="5">
                     <font>
                        <Font name="System Bold" size="17.0" />
                     </font>
                  </Label>
                  <Label text="Last Donation Date:" textFill="#2c3e50" GridPane.rowIndex="6">
                     <font>
                        <Font name="System Bold" size="17.0" />
                     </font>
                  </Label>
                  <TextField fx:id="donorIdField" promptText="Enter donor ID to load data" style="-fx-background-color: white; -fx-border-color: #3498db; -fx-border-width: 2; -fx-border-radius: 5; -fx-background-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.1), 5, 0, 0, 0);" GridPane.columnIndex="1">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </TextField>
                  <TextField fx:id="nameField" promptText="Enter full name" style="-fx-background-color: white; -fx-border-color: #3498db; -fx-border-width: 2; -fx-border-radius: 5; -fx-background-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.1), 5, 0, 0, 0);" GridPane.columnIndex="1" GridPane.rowIndex="1">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </TextField>
                  <TextField fx:id="bloodGroupField" promptText="Enter blood group (e.g., A+, B-)" style="-fx-background-color: white; -fx-border-color: #3498db; -fx-border-width: 2; -fx-border-radius: 5; -fx-background-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.1), 5, 0, 0, 0);" GridPane.columnIndex="1" GridPane.rowIndex="2">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </TextField>
                  <TextField fx:id="cityField" promptText="Enter city" style="-fx-background-color: white; -fx-border-color: #3498db; -fx-border-width: 2; -fx-border-radius: 5; -fx-background-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.1), 5, 0, 0, 0);" GridPane.columnIndex="1" GridPane.rowIndex="3">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </TextField>
                  <TextField fx:id="contactField" promptText="Enter contact number" style="-fx-background-color: white; -fx-border-color: #3498db; -fx-border-width: 2; -fx-border-radius: 5; -fx-background-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.1), 5, 0, 0, 0);" GridPane.columnIndex="1" GridPane.rowIndex="4">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </TextField>
                  <CheckBox fx:id="availabilityCheckBox" mnemonicParsing="false" selected="true" text="Available for donation" textFill="#2c3e50" GridPane.columnIndex="1" GridPane.rowIndex="5">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </CheckBox>
                  <DatePicker fx:id="lastDonationDatePicker" promptText="Select date" style="-fx-background-color: white; -fx-border-color: #3498db; -fx-border-width: 2; -fx-border-radius: 5; -fx-background-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.1), 5, 0, 0, 0);" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                  <HBox alignment="CENTER_LEFT" spacing="30.0" GridPane.columnIndex="1" GridPane.rowIndex="7">
                     <children>
                        <Button fx:id="loadButton" mnemonicParsing="false" onAction="#handleLoadButton" prefHeight="45.0" prefWidth="160.0" style="-fx-background-color: linear-gradient(to bottom, #3498db, #2980b9); -fx-background-radius: 25; -fx-border-radius: 25; -fx-border-color: #1abc9c; -fx-border-width: 2; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 10, 0, 0, 0);" text="Load Donor" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="15.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" spacing="30.0" GridPane.columnIndex="1" GridPane.rowIndex="8">
                     <children>
                        <Button fx:id="updateButton" mnemonicParsing="false" onAction="#handleUpdateButton" prefHeight="45.0" prefWidth="160.0" style="-fx-background-color: linear-gradient(to bottom, #27ae60, #219653); -fx-background-radius: 25; -fx-border-radius: 25; -fx-border-color: #1abc9c; -fx-border-width: 2; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 10, 0, 0, 0);" text="Update Donor" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="15.0" />
                           </font>
                        </Button>
                        <Button fx:id="clearButton" mnemonicParsing="false" onAction="#clearFields" prefHeight="45.0" prefWidth="160.0" style="-fx-background-color: linear-gradient(to bottom, #f39c12, #e67e22); -fx-background-radius: 25; -fx-border-radius: 25; -fx-border-color: #1abc9c; -fx-border-width: 2; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 10, 0, 0, 0);" text="Clear Fields" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="15.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </GridPane>
         </children>
         <padding>
            <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
         </padding>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER_RIGHT" prefHeight="90.0" spacing="30.0" style="-fx-background-color: rgba(0, 0, 0, 0.2);" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBackButton" prefHeight="45.0" prefWidth="220.0" style="-fx-background-color: linear-gradient(to bottom, #34495e, #2c3e50); -fx-background-radius: 25; -fx-border-radius: 25; -fx-border-color: #1abc9c; -fx-border-width: 2; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 10, 0, 0, 0);" text="Back to Main Menu" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets right="50.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>