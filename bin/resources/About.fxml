                              <Label text="• Statistics and Data Visualization" textFill="#34495e">
                                 <font>
                                    <Font size="16.0" />
                                 </font>
                              </Label>
                              <Label text="• Secure Data Storage with MySQL" textFill="#34495e">
                                 <font>
                                    <Font size="16.0" />
                                 </font>
