<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.RegisterController" style="-fx-background-color: radial-gradient(center 50% 50%, radius 100%, #3498db, #2c3e50);">
   <top>
      <VBox alignment="CENTER" prefHeight="150.0" style="-fx-background-color: rgba(0, 0, 0, 0.5); -fx-background-radius: 0 0 40 40;" BorderPane.alignment="CENTER">
         <children>
            <Label text="REGISTER NEW DONOR" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="36.0" />
               </font>
               <effect>
                  <javafx.scene.effect.DropShadow blurType="GAUSSIAN" height="25.0" radius="12.0" width="25.0" />
               </effect>
            </Label>
            <Label text="Join our community of life savers" textFill="#ecf0f1">
               <font>
                  <Font size="20.0" />
               </font>
               <effect>
                  <javafx.scene.effect.DropShadow blurType="GAUSSIAN" height="15.0" radius="7.0" width="15.0" />
               </effect>
            </Label>
         </children>
      </VBox>
   </top>
   <center>
      <VBox fx:id="formContainer" alignment="CENTER" spacing="40.0" style="-fx-background-color: rgba(255, 255, 255, 0.95); -fx-background-radius: 40; -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.4), 25, 0, 0, 0); -fx-border-color: #3498db; -fx-border-width: 3; -fx-border-radius: 40;" BorderPane.alignment="CENTER">
         <children>
            <GridPane hgap="30.0" vgap="30.0">
              <columnConstraints>
                <ColumnConstraints halignment="RIGHT" minWidth="160.0" />
                <ColumnConstraints minWidth="350.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="65.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="65.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="65.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="65.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="65.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="65.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="65.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="Full Name:" textFill="#2c3e50">
                     <font>
                        <Font name="System Bold" size="19.0" />
                     </font>
                  </Label>
                  <Label text="Blood Group:" textFill="#2c3e50" GridPane.rowIndex="1">
                     <font>
                        <Font name="System Bold" size="19.0" />
                     </font>
                  </Label>
                  <Label text="City:" textFill="#2c3e50" GridPane.rowIndex="2">
                     <font>
                        <Font name="System Bold" size="19.0" />
                     </font>
                  </Label>
                  <Label text="Contact:" textFill="#2c3e50" GridPane.rowIndex="3">
                     <font>
                        <Font name="System Bold" size="19.0" />
                     </font>
                  </Label>
                  <Label text="Availability:" textFill="#2c3e50" GridPane.rowIndex="4">
                     <font>
                        <Font name="System Bold" size="19.0" />
                     </font>
                  </Label>
                  <Label text="Last Donation Date:" textFill="#2c3e50" GridPane.rowIndex="5">
                     <font>
                        <Font name="System Bold" size="19.0" />
                     </font>
                  </Label>
                  <TextField fx:id="nameField" promptText="Enter full name" style="-fx-background-color: white; -fx-border-color: #3498db; -fx-border-width: 3; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 10, 0, 0, 0);" GridPane.columnIndex="1">
                     <font>
                        <Font size="17.0" />
                     </font>
                  </TextField>
                  <TextField fx:id="bloodGroupField" promptText="Enter blood group (e.g., A+, B-)" style="-fx-background-color: white; -fx-border-color: #3498db; -fx-border-width: 3; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 10, 0, 0, 0);" GridPane.columnIndex="1" GridPane.rowIndex="1">
                     <font>
                        <Font size="17.0" />
                     </font>
                  </TextField>
                  <TextField fx:id="cityField" promptText="Enter city" style="-fx-background-color: white; -fx-border-color: #3498db; -fx-border-width: 3; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 10, 0, 0, 0);" GridPane.columnIndex="1" GridPane.rowIndex="2">
                     <font>
                        <Font size="17.0" />
                     </font>
                  </TextField>
                  <TextField fx:id="contactField" promptText="Enter contact number" style="-fx-background-color: white; -fx-border-color: #3498db; -fx-border-width: 3; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 10, 0, 0, 0);" GridPane.columnIndex="1" GridPane.rowIndex="3">
                     <font>
                        <Font size="17.0" />
                     </font>
                  </TextField>
                  <CheckBox fx:id="availabilityCheckBox" mnemonicParsing="false" selected="true" text="Available for donation" textFill="#2c3e50" GridPane.columnIndex="1" GridPane.rowIndex="4">
                     <font>
                        <Font size="17.0" />
                     </font>
                  </CheckBox>
                  <DatePicker fx:id="lastDonationDatePicker" promptText="Select date" style="-fx-background-color: white; -fx-border-color: #3498db; -fx-border-width: 3; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 10, 0, 0, 0);" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                  <HBox alignment="CENTER_LEFT" spacing="40.0" GridPane.columnIndex="1" GridPane.rowIndex="6">
                     <children>
                        <Button fx:id="registerButton" mnemonicParsing="false" onAction="#handleRegisterButton" prefHeight="55.0" prefWidth="180.0" style="-fx-background-color: linear-gradient(to bottom, #27ae60, #219653); -fx-background-radius: 30; -fx-border-radius: 30; -fx-border-color: #1abc9c; -fx-border-width: 3; -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.4), 15, 0, 0, 0);" text="Register Donor" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="17.0" />
                           </font>
                        </Button>
                        <Button fx:id="clearButton" mnemonicParsing="false" onAction="#handleClearButton" prefHeight="55.0" prefWidth="180.0" style="-fx-background-color: linear-gradient(to bottom, #f39c12, #e67e22); -fx-background-radius: 30; -fx-border-radius: 30; -fx-border-color: #1abc9c; -fx-border-width: 3; -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.4), 15, 0, 0, 0);" text="Clear Fields" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="17.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </GridPane>
         </children>
         <padding>
            <Insets bottom="60.0" left="60.0" right="60.0" top="60.0" />
         </padding>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER_RIGHT" prefHeight="100.0" spacing="40.0" style="-fx-background-color: rgba(0, 0, 0, 0.3); -fx-background-radius: 40 40 0 0;" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBackButton" prefHeight="55.0" prefWidth="250.0" style="-fx-background-color: linear-gradient(to bottom, #34495e, #2c3e50); -fx-background-radius: 30; -fx-border-radius: 30; -fx-border-color: #1abc9c; -fx-border-width: 3; -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.4), 15, 0, 0, 0);" text="Back to Main Menu" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="17.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets right="60.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>